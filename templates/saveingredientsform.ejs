<!doctype html>
<html>
<head>
    <title>Page Title</title>
    <link rel="stylesheet" href="form.css"/>
</head>
    <body>
        <h1> Cocktail Website </h1>
        <form id="form" action="processed-save-ingredients" method="GET">
            <% for (let i = 1; i <= 8; i++) { %>
                <label> Ingredient <%= i >= 2 ?  i + " (optional)" : i %> :</label>
                <select class="ingredientInput" name="ingredient<%= i %>">
                    <option value="None" default>(None)</option>
                    <%- ingredientsHTML %>
                </select>
                <br/>
              <% } %> 
              <button type="submit"> Submit </button> <br/>
              <br/>
              <label>Load Available Cocktails with Saved Ingredients?</label>
              <button>Load</button>
              <br/>
        </form>
        <a href="/"><u>HOME</u></a>
        <br/>
    </body>
</html>